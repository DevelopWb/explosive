<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/location_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingTop="3dp"
    android:paddingRight="10dp"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/locate_key_tv"
        style="@style/item_title_style"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center_vertical"
        android:text="定位："
        app:layout_constraintBottom_toBottomOf="@+id/location_tv"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/location_tv"
        style="@style/item_content_text_style_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toRightOf="@+id/locate_key_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="5dp"
        android:ellipsize="start"
        android:gravity="left"
        app:layout_constraintRight_toLeftOf="@+id/location_iv"
        android:singleLine="true"
         />

    <ImageView
        android:id="@+id/location_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/location_icon"
        app:layout_constraintBottom_toBottomOf="@+id/location_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/location_tv"></ImageView>
</android.support.constraint.ConstraintLayout>