<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px">

    <TextView
        android:id="@+id/order_no_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:text="编号"></TextView>
    <TextView
        android:id="@+id/order_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:text="时间"></TextView>
    <TextView
        android:id="@+id/apply_user_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:paddingBottom="10dp"
        android:text="申请人"></TextView>
</LinearLayout>