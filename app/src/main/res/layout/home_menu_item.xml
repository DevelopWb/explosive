<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepage_menu_ll"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="8dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/menu_icon_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/homepage_menu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="消防巡检"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/homepage_menu_title_en_tv"
        app:layout_constraintLeft_toRightOf="@+id/menu_icon_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"></TextView>

    <TextView
        android:id="@+id/unread_tag_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/sp_filled_red_circle"
        android:gravity="center"
        android:text="33"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/homepage_menu_title_tv"
        app:layout_constraintLeft_toRightOf="@+id/homepage_menu_title_tv"
        app:layout_constraintTop_toTopOf="@+id/homepage_menu_title_tv"></TextView>

    <TextView
        android:id="@+id/homepage_menu_title_en_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="dfad"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/homepage_menu_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/homepage_menu_title_tv"></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:text="立即进入"
        android:paddingTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="8dp"
        android:textColor="@color/colorAccent"
        android:background="@drawable/sp_filled_gray_circle"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content"></TextView>


</android.support.constraint.ConstraintLayout>